material-toast
    z-index 99
    &.error
        background alpha(cred, 0.9)
    &.success
        background alpha(cgreen, 0.9)
    &.info
        background alpha(cblue, 0.9)

.left
    float left
.right 
    float right
    
@keyframes spinner
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)
.spinner
    content ""
    width 50px !important
    height 50px !important
    border-radius 100%
    border solid 4px rgba(66, 156, 214, 0.4)
    border-top solid 4px rgba(66, 156, 214, 0.8)
    position absolute
    top calc(50% - 25px)
    left calc(50% - 25px)
    animation spinner 1s infinite ease
    transition all 0.5s ease-in-out
    
.noborder
    border none 


