material-select-box
    display block
    height adminlogininputheight / 2
    position relative
    material-button
        display block 
        line-height (adminlogininputheight / 2) !important
        background white
        text-align left
        text-transform initial
        border-bottom solid 1px #eee
    material-radio-group
        position absolute
        top 100%
        bottom auto
        left 0
        right 0
        height 250px
        background white
        overflow-y auto
        overflow-x hidden
        z-index -1
        opacity 0
        transition opacity 0.2s linear, box-shadow 0.1s linear
        material-list
            padding-top adminlogininputheight
            margin-bottom ( - adminlogininputheight)
            width 100%
            height 100%
            display block
            overflow hidden
            transform translateZ(1px)
            position relative
            material-radio-button
                margin 0
        &.active
            z-index 1
            opacity 1
    .search, material-item
        height adminlogininputheight
    .search
        position absolute
        top 0
        left 0
        right 0
        background white
        border-bottom solid 1px #eee
        input
            border none
            
    material-item:nth-child(2)
        margin-top adminlogininputheight

material-input-group.select
    height adminlogininputheight
    > label, > material-select-box
        height (adminlogininputheight / 2) !important
        margin 0
        padding-left 0
        display block
    > label 
        line-height (adminlogininputheight / 2) !important
        transform none