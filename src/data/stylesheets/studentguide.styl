nav#sg
    position fixed
    top 25px
    left asidewidth + 50
    right 25px
    height sgnavheight
    display table
    width calc(100% - 325px)
    // box-shadow 2px 2px 7px rgba(0, 0, 0, 0.2)
    z-index 999999
    ul
        margin 0
        padding 0
        border none
        background white
        height sgnavheight
        display table-row
        > li:last-of-type >ul ul
            left auto
            right 100%
                
        li
            margin 0
            padding 0
            border none
            list-style none
            display inline-block
            text-align center
            line-height sgnavheight
            background linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.05) 100%)
            border-left solid 1px rgba(256, 256, 256, 0.1)
            border-right solid 1px rgba(0, 0, 0, 0.1)
            transition all 0.2s ease-in-out
            text-shadow 0 1px 1px white
            height sgnavheight
            max-height sgnavheight
            min-height sgnavheight
            line-height sgnavheight
            position relative
            display table-cell
            vertical-align top
            &:before, &:after
                display inline-block
                font-size 1.4em
                padding 0 5px
                opacity 0
                transition opacity 0.1s ease-in-out, transform 0.2s ease-in-out
            &:before
                content "["
                transform translateX(20px)
            &:after
                content "]"
                transform translateX(-20px)
            &:hover
                font-size 11pt
                &:before, &:after
                    opacity 0.6
                    transform none
                > ul
                    opacity 1
                    transform none
            > ul ul
                top 0
                left 100%
                border-bottom-left-radius 0
            ul
                display block
                width sgdropwidth
                background rgba(0, 0, 0, 0.8)
                position absolute
                top 100%
                left 0
                opacity 0
                height auto
                transform translateX(10000%)
                transition opacity 0.2s ease-in-out
                font-size 10pt !important
                color rgba(256, 256, 256, 0.8)
                border-bottom-left-radius 4px
                border-bottom-right-radius 4px
                li
                    display block
                    background transparent
                    text-shadow none
                    border-bottom solid 1px rgba(256, 256, 256, 0.2)
                    &:hover
                        background rgba(256, 256, 256, 0.2)
            &.endpoint
                cursor pointer
section#StudentGuide
    overflow visible
section#sg
    pt=sgnavheight + 25
    padding 0 5px
    margin 0 -5px
    position absolute
    top pt
    bottom 0
    left 0
    right 0
    overflow-x hidden
    overflow-y auto
    article
        margin 0 0px 25px
        padding 15px
        border-radius 4px
        // box-shadow 2px 2px 7px rgba(0, 0, 0, 0.2)
        transition all 0.5s ease-in-out
        &.inactive
            padding 0
            margin 0
            color white
            opacity 0
            transform translateY(-1000%)
            height 0
            overflow hidden
