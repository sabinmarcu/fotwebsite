@keyframes spinner
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)
.spinner
    content ""
    width 50px !important
    height 50px !important
    border-radius 100%
    border solid 4px rgba(66, 156, 214, 0.4)
    border-top solid 4px rgba(66, 156, 214, 0.8)
    position absolute
    top calc(50% - 25px)
    left calc(50% - 25px)
    animation spinner 1s infinite ease
    transition all 0.5s ease-in-out

div[ui-calendar]
    margin-top 25px
    
material-content.inner
    margin-top 25px
    
material-content.loader, material-content.content
    &.loader
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        width auto !important
        .spinner
            width 150px !important
            height 150px !important
            top calc(50% - 75px)
            left calc(50% - 75px)
    opacity 0
    transform scale(0.5)
    transition opacity 1s ease-in-out, transform 1s ease-in-out
    > div
        text-align center
        > * 
            text-align left
    height 0
    width 0
    overflow hidden
    &.active
        opacity 1
        transform none
        height auto
        width 100%
        overflow visible

    material-content.pagination
        display block
        padding 10px
        margin 5px 0
        text-align center
        div
            overflow visible
        material-button
            margin 0 10px
        
article.post
    position relative
    display inline-block
    height articleheight
    max-height articleheight
    min-height articleheight
    text-align left
    margin 12.5px
    border solid 1px #666
    background white
    overflow hidden
    cursor pointer
    *[ng-click]
        cursor pointer
    &:nth-of-type(1), &:nth-of-type(2), &:nth-of-type(3)
        margin-top 0
    &:nth-of-type(3n + 1)
        margin-left 0
        width calc(38% - 12.5px)
    &:nth-of-type(3n)
        margin-right 0
        width calc(38% - 12.5px)
    &:nth-of-type(3n + 2)
        width calc(38% - 25px)
        max-width calc(38% - 25px)
    &:nth-of-type(9n - 6), &:nth-of-type(9n - 2)
        width calc(24% - 12.5px)
        max-width calc(24% - 12.5px)
    &:nth-of-type(9n - 4)
        width calc(24% - 25px)
        max-width calc(24% - 25px)
    &:only-of-type
        width 100%
        max-width 100%
    &:first-of-type:nth-last-of-type(2) 
        width calc(50% - 12.5px)
        max-width calc(50% - 12.5px)
        margin 12.5px 12.5px 12.5px 0 !important
    &:last-of-type:nth-of-type(2) 
        width calc(50% - 12.5px)
        max-width calc(50% - 12.5px)
        margin 12.5px 0 12.5px 12.5px !important
    img, canvas
        opacity 0
        transition opacity 0.5s ease-in-out, top 0.5s linear, left 0.5s linear
        position relative
        &.active
            opacity 1 
            ~ .shade
                opacity 0.4
            ~ .spinner
                opacity 0
    figure
        width 100%
        height articleheight
        margin 0
        padding 0
        background-size cover !important
        > img
            width 100%
            height articleheight
        .shade
            position absolute
            top 0
            bottom articletextheight
            right 0
            left 0
            background black
            opacity 0
            transition all 0.5s ease-in-out
    &:hover 
        figure .shade
            opacity 0
    figcaption
        position absolute
        right 0
        left 0
        bottom 0
        overflow hidden
        height articletextheight
        .focuspoint
            width 100% !important
            height articleheight !important
            transform translateY(-(articleheight - articletextheight))
            canvas.active
                opacity 1
        .content
            background rgba(0, 0, 0, 0.6)
            position absolute
            bottom 0
            right 0
            left 0
            top 0
            border-top solid 1px rgba(256, 256, 256, 0.4)
            transition all 0.2s ease-in-out
            h1, h2
                position absolute
                top 0
                bottom 0
                left 15px
                right 15px
                margin 0
                padding 0
                color rgba(256, 256, 256, 0.8)
                transition all 0.2s ease-in-out
                font-size 14pt
            h1
                top (articletextheight / 3)
                line-height (articletextheight / 3 * 2)
            h2
                padding-top 20px
                font-size 10pt
                color rgba(256, 256, 256, 0.6)
                line-height (articletextheight / 3)
                span
                    float right
    &.detailed aside
        top 0
        bottom 0
        left 0
        right 0
    aside
        z-index -1
        transform translateY(-1)
        background rgba(0, 0, 0, 0.8)
        position fixed
        opacity 0
        &.active
            opacity 1
            z-index 999999
            transform translateZ(999999)
            transition all 0.2s ease-in-out
        section
            background white
            border-radius 4px
            transition none
            position absolute
            transition all 0.5s ease-in-out
            transition-delay 0.2s
            overflow hidden
            header
                position absolute
                top 0
                left 0
                right 0
                height articletextheight
                border-bottom solid 1px #999
                h1
                    display block
                    margin 0
                    padding 0
                    line-height articletextheight
                    height articletextheight
                    font-size 14pt
                    text-indent 15px
                nav
                    position absolute
                    top 0
                    bottom 0
                    right 15px
                    li
                        list-style none
                        display inline-block
                        line-height articletextheight
                        height articletextheight
                        float right
                        font-size (articletextheight / 4)
                        padding 0 5px
                        margin 0 5px
                section
                    margin-top 1px
                    padding 15px
