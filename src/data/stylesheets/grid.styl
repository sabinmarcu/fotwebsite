.container 
    position absolute
    top asideheight
    bottom 0
    left 0
    right 0
    > section
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        transition all 0.5s timing
        opacity 0
        text-align center
        overflow-y auto
        overflow-x visible
        transform scale(0.01)
        perspective 600px
        & > *
            text-align left
            z-index 1
        &.active
            transform none
            opacity 1
            z-index 2
            & ~ section
                transform scale(2)
                z-index -1
        nav.phonemenu
            display none 
        > div
            width 100%
            height 100%
