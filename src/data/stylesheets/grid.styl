> .container > section
        position fixed
        top asideheight
        bottom 0
        left 0
        right 0
        transition all 0.5s timing
        opacity 0
        text-align center
        overflow-y auto
        overflow-x visible
        transform scale(0.01)
        perspective 600px
        & > *
            text-align left
            z-index 1
        &.active
            transform none
            opacity 1
            z-index 2
            & ~ section
                transform scale(2)
                z-index -1
        nav.phonemenu
            display none 
        > div
            width 100%
            height 100%
> .shade
    position fixed
    top asideheight
    bottom 0
    right 0
    left 0
    opacity 0
    z-index -1
    img 
        position absolute
        bottom 25px
        right 25px
        z-index 2

    .darkness
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background white
        opacity 0.7
        z-index 1