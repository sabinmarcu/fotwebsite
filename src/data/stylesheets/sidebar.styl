> aside
    position fixed
    top 25px
    left 25px
    width asidewidth
    height auto
    background white
    // box-shadow 2px 2px 7px rgba(0, 0, 0, 0.3)
    border-radius 4px
    overflow hidden
    text-align center
    img
        width asidewidth - 50px
        padding 25px
    &.inactive
        z-index -1
    ul
        margin 0
        padding 0
        background rgba(0, 0, 0, 0.1)
        list-style none
        text-align left
        li
            display block
            list-style none
            material-button
                display block
                padding 5px 0 5px 10px
                font-size 10pt
                color black
                text-shadow 0 1px 1px white
                border-top solid 1px rgba(0, 0, 0, 0.2)
                position relative
                text-align left
                text-transform none
                border-radius 0
                &.active
                    background rgba(0, 0, 0, 0.1)
                &:hover, &:active
                    background rgba(0, 0, 0, 0.2)
                &:visited, &:link
                    color inherit
                    text-decoration none
                a
                    text-decoration none
