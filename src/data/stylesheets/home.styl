section#Home
    article
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        &.main
            right homesmall

        &:not(.main)    

            transition all 0.5s timing

            &.active
                    
                transition all 0.5s timing

                top 0 !important
                bottom 0 !important
                left 0 !important
                right 0 !important
                z-index 9

                h1
                    transition all 0.5s timing
                    height asideheight * 2
                    line-height asideheight * 2
                    font-size 3em

                .content
                    transition all 0.5s timing
                    top asideheight * 2
                    opacity 1
                    z-index 1

                .brief
                    transition all 0.5s timing
                    opacity 0
                    z-index -1

                wfz2()

            background white

            .content
                transition all 0.5s timing
                opacity 0
                z-index -1

            &:last-of-type
                top 50%

            &:nth-child(2)
                bottom 50%
                border-bottom solid 1px cdarkgray

            left homebig