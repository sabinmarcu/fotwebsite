body, html
    width 100%
    height 100%
    margin 0
    padding 0
    background #000

body
    font-size 10pt
    overflow hidden
    font-family "Open Sans", Arial, Helvetica, sans-serif
    font-weight 300
 
body .seoflier.inactive
    @import "variables"
    opacity 0
    z-index -1
    transform scale(0.5)
    transition all 3s timing
    
body #wrapper > div, body #wrapper > div > section
    width 100%
    height 100%
    
body #wrapper section.primarysection
    wfz1()
    &.static
        padding 0 25px 25px

body #wrapper > div > section
    @import "variables"
    position fixed
    top 0
    left 0
    perspective 600
    transition transform 0.7s timing, opacity 0.7s timing
    opacity 0
    z-index -1
    &.admin
        transform translateX(100%)
    &.main
        transform translateX(-100%)
    &.active
        transform none
        opacity 1
        z-index 1

body #wrapper > div > section.admin
    @import "variables"
    @import "admin"
    @import "400/admindesktop"

body #wrapper > div > section.main, 
body #wrapper > div > section.admin .main
    @import "variables"
    @import "sidebar"
    @import "grid"
    @import "article"
    @import "studentguide"
    @import "800/desktop"
    @import "400/desktop"

body #wrapper > div.mobile > section.main, 
body #wrapper > div.mobile > section.admin .main
    @import "800"
    @import "400"
    
body #wrapper > div.mobile > section.admin
    @import "400/admin"
    
body #wrapper
    @import "variables"
    @import "globals"
    @import 'materialSelectBox'
