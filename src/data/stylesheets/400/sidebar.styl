> aside
    nav
        width 100%
        left 0
    &:hover
        h1
            wfz1()
            background cfotgreen
        nav
            transform rotateX(-50deg) translateY(-130%)
        ~ .shade
            z-index -1
            opacity 0 
    &.active
        h1
            wfz2()
            background cfotgreenlight
        nav
            transform none
        ~ .shade
            z-index 2
            opacity 1