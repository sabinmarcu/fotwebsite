section#Home 
    perspective 600
    overflow hidden
    > div
        width 100%
        height 100%
        article
            position fixed
            top 0 !important
            bottom 0 !important
            left 0 !important
            right 0 !important
            z-index -1
            opacity 0
            transform translateX(-100%)
            transition all 0.5s timing
            overflow hidden
            &.active
                z-index 1
                opacity 1
                transform none
                + article
                    transform translateX(100%)