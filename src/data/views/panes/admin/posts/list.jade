section(ng-class="isActive('list')")
    material-content.loader(ng-class="{active: posts.length == 0}")
        .spinner
    material-content.content(ng-class="{active: posts.length > 0}")
        material-list
            material-item(ng-repeat="post in posts")
                .material-tile-content
                    a(href="/membership/posts/edit/{{post._id}}")
                        h2 {{post.title}}
                        h3 {{post._id}}
    material-button.big(href='/membership/posts/add') Add a Post