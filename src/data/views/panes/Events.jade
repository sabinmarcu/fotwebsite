        article.event(ng-repeat="index in data.content" id="article-{{index}}" ng-class="{active: data.active == index}" )
            .wrapper(style="background: #{{colors[index]}};")
                h1 Event {{index}}
                .brief Brief Content
                .content Big Content

                nav
                    material-button.right(ng-click="toggleArticle(index)" ng-if="data.active != index") Read More
                    material-button.right(ng-click="toggleArticle(index)" ng-if="data.active == index") Close